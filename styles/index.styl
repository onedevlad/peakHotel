@require './vars.styl'

@require '../scripts/pickMeUp/css/pickmeup.styl'
@require './bootstrap/index.styl'

@require './components/nav.styl'
@require './components/nav-expanders.styl'
@require './components/sliders.styl'
@require './components/footer.styl'

html
	width 100%
	body
		font-family 'Lato'
		position relative
		width 100%
		overflow-x hidden // Not sure if it will ever be needed
		transition padding-top transitionDuration ease

body > .container-fluid
	width 100%
	padding 0
	.row
		margin 0

.global-overlay
	width 100%
	height 100%
	background rgba(black, 0.75)
	fixed top left -100%
	opacity 0
	z-index 200
	transition opacity transitionDuration ease
	&.open
		opacity 1
		left 0
a:hover
a:focus
	text-decoration none

@media(max-width $screen-xs)
	body
		font-size 10px !important

@media(min-width 1700px) and (max-width 2000px)
	body
		font-size 18px !important

@media(min-width 2000px) and (max-width 2500px)
	body
		font-size 20px !important

@media(min-width 2500px)
	body
		font-size 25px !important
		padding-top 200px !important
		nav
			.container-fluid
				height 200px !important
				.news-bar
					.news-wrap
						line-height 200px !important
				.booking-bar
					line-height 200px !important
		footer
			padding-bottom 200px !important
			height 200px !important
			.subfooter
				height 200px !important
				.col-rights
				.col-devs
					&>span
						line-height 200px !important