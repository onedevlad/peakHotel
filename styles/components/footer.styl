@media(max-width $screen-lg) and (min-width $screen-md)
	footer
		.col-social
			.social-icons
				width 40% !important
		.weather-report
			width 30% !important
			.c
				margin-left 1em !important
@media(max-width $screen-md) and (min-width $screen-sm)
	.col-social
		.social-icons
			width 60% !important
