@require '../fonts/playfair/playfair.styl'
@require '../fonts/lato/lato.styl'

navHeight=100px
navExpanderHeight=300px
orange=rgb(198, 111, 33)
gray=rgb(59, 55, 54)
darkGray=rgb(48, 44, 43)
lighterGray=rgb(69, 55, 54)
lightGray=rgb(162, 162,162)
lightDark=rgb(100, 100, 100)
transitionDuration=0.4s
red=orange

$screen-xxs=360px
$screen-xl=1700px
$screen-xxl=2000px
$screen-xxxl=2500px // ~2K


sprite(icon, size)
	size?=@height
	background url('../images/icons/icons.svg')
	background-size size
	background-repeat no-repeat
	background-position 0 (0 - (icon * size))

arrow(dir='up', color=gray, size=6px)
	width 0
	height 0
	if dir is 'up'
		border-top size solid transparent
		border-left size solid transparent
		border-right size solid transparent
		border-bottom size solid color
	if dir is 'left'
		border-top size solid transparent
		border-left size solid transparent
		border-right size solid color
		border-bottom size solid transparent
	if dir is 'right'
		border-top size solid transparent
		border-left size solid color
		border-right size solid transparent
		border-bottom size solid transparent
	if dir is 'down'
		border-top size solid color
		border-left size solid transparent
		border-right size solid transparent
		border-bottom size solid transparent
